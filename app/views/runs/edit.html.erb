<h1>Edit Run</h1>

<%= form_with(model: @run, local: true) do |form| %>
    <p>
      <%= form.label :run_number %><br>
      <%= form.text_field :run_number %>
    </p>
   
    <p>
      <%= form.label :date %><br>
      <%= form.date_field :date %>
    </p>
   
    <p>
      <%= form.submit %>
    </p>
  <% end %>
  <%= link_to 'Back', runs_path, class: "btn btn-sm btn-outline-secondary" %>