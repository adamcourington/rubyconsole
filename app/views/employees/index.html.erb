

 
<table>
  <tr>
    <h1>Employees</h1>
    <th></th>
  </tr>
  <%= link_to 'New Employee', new_employee_path, class: "btn btn-sm btn-outline-secondary" %>
  <% @employees.each do |employee| %>
    <tr>
      <td><%= employee.name %></td>
      <td><%= link_to 'Show', employee_path(employee), class: "btn btn-sm btn-outline-secondary" %> | </td>
      
      <td><%= link_to 'Delete', employee_path(employee), class: "btn btn-sm btn-outline-secondary",
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>